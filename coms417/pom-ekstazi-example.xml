<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  Đây là ví dụ về cách thêm Ekstazi plugin vào pom.xml
  Copy phần <build> này vào file commons-csv/pom.xml của bạn
-->
<project>
  <!-- ... các phần khác của pom.xml ... -->
  
  <build>
    <plugins>
      <!-- Ekstazi Plugin - Thêm plugin này vào -->
      <plugin>
        <groupId>org.ekstazi</groupId>
        <artifactId>ekstazi-maven-plugin</artifactId>
        <version>5.3.0</version>
        <executions>
          <execution>
            <id>ekstazi</id>
            <goals>
              <goal>select</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <!-- Các plugin khác nếu có (Maven Compiler, Surefire, etc.) -->
    </plugins>
  </build>
  
  <!-- ... phần còn lại của pom.xml ... -->
</project>

